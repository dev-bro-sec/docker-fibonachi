{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "client",
            "image": "ragabi/multi-client",
            "hostname": "client",
            "essential": false
        },

        {
            "name": "server",
            "image": "ragabi/multi-server",
            "hostname": "api",
            "essential": false
        },

        {
            "name": "worker",
            "image": "ragabi/multi-worker",
            "hostname": "worker",
            "essential": false
        },

        {
            "name": "nginx",
            "image": "ragabi/multi-nginx",
            "hostname": "nginx",
            "essential": true,
            "portMapping": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
             
            "links": ["client", "server"]
        }
    ]
}